@model LinkedInAPI.Models.Company

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Name);
}

<h1>@ViewData["Title"]</h1>

@foreach (var item in Model.Jobs)
{
    <table class="table table-bordered table-striped-columns">
        <tr>
            <th class="col-sm-2 table-secondary">
                @Html.DisplayNameFor(model => item.Title)
            </th>
            <td class="col-sm-4">
                @Html.DisplayFor(model => item.Title)
            </td>
        </tr>
        <tr>
            <th class="col-sm-2 table-secondary">
                @Html.DisplayNameFor(model => item.Local)
            </th>
            <td class="col-sm-4">
                @Html.DisplayFor(model => item.Local)
            </td>
        </tr>
        <tr>
            <th class="col-sm-2 table-secondary">
                @Html.DisplayNameFor(model => item.Salary)
            </th>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.Salary)
            </td>
        </tr>
        <tr>
            <th class="col-sm-2 table-secondary">
                @Html.DisplayNameFor(model => item.Benefits)    
            </th>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.Benefits)
            </td>
        </tr>
    </table>
    <div>
        <a class="btn btn-outline-primary" asp-area="" asp-controller="Jobs" asp-action="Details" asp-route-id="@item.ID">Job Detail</a>
    </div>
    <p></p>
}
<div>
    <a asp-action="Index" class="btn btn-outline-warning">Back to List</a>
</div>
